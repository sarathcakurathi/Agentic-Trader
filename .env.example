# =============================================================================
# AUTONOMOUS TRADING AGENT - ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# MODEL CONFIGURATION (Choose ONE provider)
# -----------------------------------------------------------------------------

# Model Provider: "cerebras" (recommended), "groq", "openai", or "custom"
MODEL_PROVIDER=cerebras

# --- CEREBRAS (ULTRA-FAST - Recommended for Trading) ---
CEREBRAS_API_KEY=csk-your-cerebras-api-key-here
CEREBRAS_MODEL=cerebras/gpt-oss-120b  # Optional: Override default (fastest: 1800+ tokens/sec)

# --- GROQ (FAST & Cost-Effective) ---
GROQ_API_KEY=gsk-your-groq-api-key-here
GROQ_MODEL=groq/qwen/qwen3-32b  # Optional: Override default model

# --- OPENAI (Default - High Quality) ---
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=openai/gpt-5-mini  # Optional: Override default model

# --- CUSTOM (Advanced Users) ---
# Use any LiteLLM-compatible model
CUSTOM_MODEL=anthropic/claude-3-5-sonnet-20241022
CUSTOM_API_KEY=sk-ant-your-custom-api-key-here
CUSTOM_API_BASE=https://api.anthropic.com/v1  # Optional

# -----------------------------------------------------------------------------
# OPENALGO CONFIGURATION (Required)
# -----------------------------------------------------------------------------

OPENALGO_API_KEY=your-openalgo-api-key-here
OPENALGO_HOST=http://127.0.0.1:5000

# -----------------------------------------------------------------------------
# UV PACKAGE MANAGER CONFIGURATION (Optional)
# -----------------------------------------------------------------------------

# Suppress hardlink warning if on different filesystems
# UV_LINK_MODE=copy

# -----------------------------------------------------------------------------
# MEMORY CONFIGURATION (Optional)
# -----------------------------------------------------------------------------

# Maximum conversation history items to keep in memory
# Lower value = less token usage, less context
# Higher value = more token usage, more context
# Default: 10 (recommended for cost control)
# MAX_MEMORY_ITEMS=10

# -----------------------------------------------------------------------------
# TRADING CONFIGURATION
# -----------------------------------------------------------------------------

# Trading symbols (comma-separated)
# SYMBOLS=ICICIBANK,RELIANCE,SBIN,WIPRO,ITC

# Max investment per trade (in Rs.)
# MAX_INVESTMENT_PER_TRADE=10000

# Daily stop-loss (in Rs.)
# DAILY_STOP_LOSS=-10000

# Max trades per symbol per day
# MAX_TRADES_PER_SYMBOL=5

# -----------------------------------------------------------------------------
# QUICK START EXAMPLES
# -----------------------------------------------------------------------------

# Example 1: Use Cerebras (ULTRA-FAST for real-time trading)
# MODEL_PROVIDER=cerebras
# CEREBRAS_API_KEY=csk-...

# Example 2: Use Groq (Fast & cost-effective)
# MODEL_PROVIDER=groq
# GROQ_API_KEY=gsk-...

# Example 3: Use OpenAI (High quality, reliable)
# MODEL_PROVIDER=openai
# OPENAI_API_KEY=sk-...

# Example 4: Use custom model
# MODEL_PROVIDER=custom
# CUSTOM_MODEL=anthropic/claude-3-5-sonnet-20241022
# CUSTOM_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# NOTES
